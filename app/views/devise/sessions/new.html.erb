<div class="login-container">
  <div class="login-form">
    <div class="auth-brand">
      <h1>Óptica</h1>
    </div>
    <h2>Bienvenido de Vuelta</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form-content" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Correo Electrónico" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ingresa tu correo electrónico" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Ingresa tu contraseña" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox-group">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Iniciar Sesión", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

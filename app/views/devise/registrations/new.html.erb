<div class="login-container">
  <div class="login-form">
    <div class="auth-brand">
      <h1>Óptica</h1>
    </div>
    <h2>Crear Cuenta</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form-content" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Correo Electrónico" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ingresa tu correo electrónico" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Ingresa tu contraseña" %>
        <% if @minimum_password_length %>
          <small class="form-text">Mínimo <%= @minimum_password_length %> caracteres</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar Contraseña" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirma tu contraseña" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Crear Cuenta", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

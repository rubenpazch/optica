<div class="home-dashboard">
  <div class="dashboard-header">
    <h1 class="dashboard-title">Welcome to Optica</h1>
    <p class="dashboard-subtitle">Your comprehensive optical management system</p>
  </div>
  
  <div class="dashboard-stats">
    <div class="stat-card">
      <div class="stat-icon">📈</div>
      <h2 class="stat-number">150</h2>
      <p class="stat-label">Total Patients</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">👓</div>
      <h2 class="stat-number">45</h2>
      <p class="stat-label">Frames in Stock</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">📅</div>
      <h2 class="stat-number">12</h2>
      <p class="stat-label">Today's Appointments</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">💰</div>
      <h2 class="stat-number">$2,450</h2>
      <p class="stat-label">Monthly Revenue</p>
    </div>
  </div>
  
  <div class="dashboard-actions">
    <h2 class="actions-title">Quick Actions</h2>
    
    <div class="action-grid">
      <%= link_to "#", class: "action-card" do %>
        <div class="action-icon">👤</div>
        <h3 class="action-title">Add Patient</h3>
      <% end %>
      
      <%= link_to "#", class: "action-card" do %>
        <div class="action-icon">📋</div>
        <h3 class="action-title">New Appointment</h3>
      <% end %>
      
      <%= link_to "#", class: "action-card" do %>
        <div class="action-icon">👓</div>
        <h3 class="action-title">Manage Inventory</h3>
      <% end %>
      
      <%= link_to "#", class: "action-card" do %>
        <div class="action-icon">📊</div>
        <h3 class="action-title">View Reports</h3>
      <% end %>
      
      <%= link_to edit_user_registration_path, class: "action-card" do %>
        <div class="action-icon">⚙️</div>
        <h3 class="action-title">Account Settings</h3>
      <% end %>
      
      <%= link_to "#", class: "action-card" do %>
        <div class="action-icon">💬</div>
        <h3 class="action-title">Support</h3>
      <% end %>
    </div>
  </div>
</div>
